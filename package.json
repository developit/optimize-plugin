{
  "name": "optimize-plugin",
  "version": "3.2.0",
  "description": "Webpack plugin to optimize bundles.",
  "main": "dist/optimize-plugin.js",
  "repository": "GoogleChromeLabs/optimize-plugin",
  "scripts": {
    "build": "microbundle --target node --format cjs --no-compress src/*.js",
    "prepack": "npm run build",
    "dev": "jest --verbose --watchAll",
    "test": "jest --verbose",
    "release": "npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "semi": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/fixtures/"
    ]
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "webpack",
    "plugin",
    "minify",
    "optimize"
  ],
  "author": "Jason Miller (https://github.com/developit)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "clean-webpack-plugin": "^1.0.0",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.1.0",
    "jest": "^25.5.4",
    "memory-fs": "^0.4.1",
    "microbundle": "^0.12.4",
    "preact": "^10.5.7",
    "sucrase": "^3.16.0",
    "terser-webpack-plugin": "^1.4.5",
    "ts-loader": "^6.2.2",
    "webpack": "^4.44.2"
  },
  "dependencies": {
    "@babel/core": "^7.12.7",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "babel-preset-modernize": "0.0.5",
    "core-js": "^3.7.0",
    "gzip-size": "^5.1.1",
    "jest-worker": "^25.5.0",
    "magic-string": "^0.25.7",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^1.32.1",
    "terser": "^4.8.0",
    "webpack-sources": "^1.4.3"
  },
  "peerDependencies": {
    "@babel/preset-env": ">= 7.10",
    "webpack": ">= 4"
  }
}
